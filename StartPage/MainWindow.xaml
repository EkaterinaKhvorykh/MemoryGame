<Window x:Class="StartPage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MemoryGame" Height="466" Width="600">
    <Window.Background>
        <ImageBrush ImageSource="fon2.png"/>
    </Window.Background>

    <Window.BorderBrush>
        <ImageBrush/>
    </Window.BorderBrush>
    <Grid>
        <Image HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="589" Source="logo2.png" Margin="10,0,0,0"/>

        <Button Content="EASY" Name="Easy" HorizontalAlignment="Left" Height="46" Margin="177,221,0,0" VerticalAlignment="Top" Width="231" Background="AliceBlue"  Click="Button_Click" IsEnabled="False"/>

        <Button Content="HARD" Name="Hard" HorizontalAlignment="Left" Height="46" Margin="177,289,0,0" VerticalAlignment="Top" Width="231" Background="AliceBlue" Click="Button_Click_1" IsEnabled="False" />
        <ListBox HorizontalAlignment="Left" Height="71" Margin="177,129,0,0" VerticalAlignment="Top" Width="231" Background="AliceBlue" BorderBrush="Black">
            <ListBoxItem Content="ANGRY BIRDS" Selected="AB_Selected" HorizontalAlignment="Center"/>
            <ListBoxItem Content="SUPER MARIO" Selected="SM_Selected" HorizontalAlignment="Center"/>
            <ListBoxItem Content="SMESHARIKI" HorizontalAlignment="Center" Selected="ListBoxItem_Selected"/>

        </ListBox>

    </Grid>
</Window>
